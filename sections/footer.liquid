<section class="bg-[#F7F4EF] pt-16 pb-8 text-gray-800" id="FooterCustom">
  <!-- Newsletter -->
  {% for block in section.blocks %}
    {% if block.type == 'newsletter' %}
      <div class="max-w-xl mx-auto text-center px-6 mb-16">
        {% if block.settings.heading %}
          <h2 class="text-3xl font-semibold mb-3">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.text %}
          <p class="text-gray-600 mb-6">{{ block.settings.text }}</p>
        {% endif %}

        <form method="post" action="/contact#newsletter" class="flex gap-3 justify-center">
          <input
            type="email"
            required
            name="contact[email]"
            placeholder="Enter your email"
            class="border border-gray-300 bg-white px-4 py-3 w-full max-w-xs focus:outline-none"
          >
          <button type="submit" class="bg-black text-white px-5 py-3 hover:bg-gray-900">
            {{ block.settings.button_text }}
          </button>
        </form>
      </div>
    {% endif %}
  {% endfor %}

  <!-- Footer Columns -->
  <div class="max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-12 px-6">
    {% for block in section.blocks %}
      <!-- About Text -->
      {% if block.type == 'about' %}
        <div>
          <h3 class="text-lg font-semibold mb-4">{{ block.settings.title }}</h3>
          <p class="text-gray-600 leading-relaxed">{{ block.settings.text }}</p>
        </div>
      {% endif %}

      <!-- Menu Column -->
      {% if block.type == 'menu' %}
        <div>
          <h3 class="text-lg font-semibold mb-4">{{ block.settings.title }}</h3>
          <ul class="space-y-2">
            {% for link in linklists[block.settings.menu].links %}
              <li>
                <a href="{{ link.url }}" class="text-gray-600 hover:text-black transition">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      <!-- Contact Column -->
      {% if block.type == 'contact' %}
        <div>
          <h3 class="text-lg font-semibold mb-4">{{ block.settings.title }}</h3>

          <ul class="text-gray-600 space-y-2">
            {% if block.settings.address %}
              <li>{{ block.settings.address }}</li>
            {% endif %}

            {% if block.settings.email %}
              <li>
                Email:
                <a href="mailto:{{ block.settings.email }}" class="hover:text-black">{{ block.settings.email }}</a>
              </li>
            {% endif %}

            {% if block.settings.phone %}
              <li>
                Phone: <a href="tel:{{ block.settings.phone }}" class="hover:text-black">{{ block.settings.phone }}</a>
              </li>
            {% endif %}
          </ul>

          <!-- Social Icons -->
          <div class="flex space-x-4 mt-4">
            {% if block.settings.facebook %}
              <a href="{{ block.settings.facebook }}" class="hover:text-black text-xl">
                <i class="fa fa-facebook"></i>
              </a>
            {% endif %}
            {% if block.settings.instagram %}
              <a href="{{ block.settings.instagram }}" class="hover:text-black text-xl">
                <i class="fa fa-instagram"></i>
              </a>
            {% endif %}
            {% if block.settings.youtube %}
              <a href="{{ block.settings.youtube }}" class="hover:text-black text-xl">
                <i class="fa fa-youtube"></i>
              </a>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-gray-300 mt-12 pt-6 pb-2">
    <div class="max-w-6xl mx-auto flex flex-col lg:flex-row justify-between px-6 text-gray-600 text-sm">
      <p>
        Â© {{ 'now' | date: '%Y' }}
        {{ shop.name }}. All Rights Reserved.
      </p>

      <div class="flex gap-4 mt-4 lg:mt-0">
        <a href="/policies/privacy-policy" class="hover:text-black">Privacy Policy</a>
        <a href="/policies/terms-of-service" class="hover:text-black">Terms of Service</a>
        <a href="/policies/refund-policy" class="hover:text-black">Refund Policy</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Tailwind Footer",
  "settings": [],
  "blocks": [
    {
      "type": "newsletter",
      "name": "Newsletter",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading", "default": "Stay Updated" },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Subscribe to get updates on products and offers."
        },
        { "type": "text", "id": "button_text", "label": "Button Text", "default": "Subscribe" }
      ]
    },
    {
      "type": "about",
      "name": "About Column",
      "settings": [
        { "type": "text", "id": "title", "label": "Heading", "default": "About" },
        { "type": "textarea", "id": "text", "label": "Content", "default": "Write your store description here." }
      ]
    },
    {
      "type": "menu",
      "name": "Menu Column",
      "settings": [
        { "type": "text", "id": "title", "label": "Heading", "default": "Quick Links" },
        { "type": "link_list", "id": "menu", "label": "Menu" }
      ]
    },
    {
      "type": "contact",
      "name": "Contact Column",
      "settings": [
        { "type": "text", "id": "title", "label": "Heading", "default": "Contact Us" },
        { "type": "textarea", "id": "address", "label": "Address" },
        { "type": "text", "id": "email", "label": "Email" },
        { "type": "text", "id": "phone", "label": "Phone" },
        { "type": "url", "id": "facebook", "label": "Facebook" },
        { "type": "url", "id": "instagram", "label": "Instagram" },
        { "type": "url", "id": "youtube", "label": "YouTube" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Tailwind Footer",
      "blocks": [{ "type": "newsletter" }, { "type": "about" }, { "type": "menu" }, { "type": "contact" }]
    }
  ]
}
{% endschema %}
