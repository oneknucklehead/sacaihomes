{% comment %}
  Luxury Product Carousel with hover second image + buttons
{% endcomment %}

<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css"
>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css"
>

<div class="product-carousel-section bg-[#EDEAE2] py-14">
  <div class="mx-auto px-4 max-w-[1500px]">
    {% if section.settings.heading != blank %}
      <h2 class="text-2xl font-semibold mb-10 text-center text-[#273A27] tracking-wider uppercase">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="relative">
      <!-- Prev -->
      <button
        type="button"
        class="carousel-prev absolute left-0 top-1/2 -translate-y-1/2 bg-transparent z-10 hover:opacity-70 transition"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="#A7A29A" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>

      <div class="product-carousel opacity-0 transition-opacity duration-300">
        {% for product in collections[section.settings.collection].products %}
          {% assign first_image = product.images[0] %}
          {% assign second_image = product.images[1] %}
          <div class="px-4 group relative">
            <div class="aspect-[4/5] bg-[#E9E6DD] overflow-hidden relative">
              {% assign first_image = product.images[0] %}
              {% assign second_image = product.images[1] %}

              <!-- First Image -->
              <img
                src="{{ first_image | img_url: '800x800' }}"
                alt="{{ product.title | escape }}"
                class="
                  absolute inset-0 w-full h-full object-cover transition-opacity duration-500
                  {% if second_image %}group-hover:opacity-0{% endif %}
                "
              >

              <!-- Second Image (only if available) -->
              {% if second_image %}
                <img
                  src="{{ second_image | img_url: '800x800' }}"
                  alt="{{ product.title | escape }}"
                  class="absolute inset-0 w-full h-full object-cover opacity-0 transition-opacity duration-500 group-hover:opacity-100"
                >
              {% endif %}

              <!-- Hover Buttons -->
              <div
                class="absolute bottom-0 left-0 right-0 bg-white bg-opacity-90 flex justify-center space-x-8 py-3 opacity-0 group-hover:opacity-100 transition-all duration-500"
              >
                <button
                  class="add-to-bag-btn text-sm font-medium tracking-wide text-[#273A27] hover:underline"
                  data-product-id="{{ product.id }}"
                >
                  ADD TO BAG
                </button>
                <span class="text-gray-400">|</span>
                <button
                  class="buy-now-btn text-sm font-medium tracking-wide text-[#273A27] hover:underline"
                  data-product-id="{{ product.id }}"
                >
                  BUY NOW
                </button>
              </div>
            </div>

            <!-- Title + Price -->
            <div class="text-center mt-4">
              <h3 class="text-sm tracking-[0.15em] font-medium text-[#273A27] uppercase">
                {{ product.title }}
              </h3>
              <p class="text-[#273A27] mt-1 text-sm">
                {{ product.price | money }}
              </p>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- Next -->
      <button
        type="button"
        class="carousel-next absolute right-0 top-1/2 -translate-y-1/2 bg-transparent z-10 hover:opacity-70 transition"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="#A7A29A" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const $carousel = $('.product-carousel');
    $carousel.on('init', function () {
      $carousel.removeClass('opacity-0').addClass('opacity-100');
    });
    $carousel.slick({
      slidesToShow: 3,
      slidesToScroll: 3,
      infinite: true,
      arrows: true,
      dots: false,
      autoplay: false,
      prevArrow: $('.carousel-prev'),
      nextArrow: $('.carousel-next'),
      responsive: [
        { breakpoint: 1024, settings: { slidesToShow: 2 } },
        { breakpoint: 640, settings: { slidesToShow: 1 } },
      ],
    });

    // ✅ Add to Bag button — use Shopify's real cart logic
    document.querySelectorAll('.add-to-bag-btn').forEach((button) => {
      button.addEventListener('click', async (e) => {
        e.preventDefault();
        const id = button.dataset.productId;

        // Same as Dawn's product-form.js
        try {
          const res = await fetch(window.Shopify.routes.root + 'cart/add.js', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json', Accept: 'application/json' },
            body: JSON.stringify({ id, quantity: 1 }),
          });

          if (!res.ok) throw new Error('Add to cart failed');

          // Dispatch events identical to product-form.js
          document.body.dispatchEvent(new CustomEvent('cart:refresh', { bubbles: true }));
          document.body.dispatchEvent(new CustomEvent('cart:open', { bubbles: true }));
        } catch (error) {
          console.error('Error adding to cart:', error);
        }
      });
    });

    // ✅ Buy Now button — add to cart then redirect to cart page
    document.querySelectorAll('.buy-now-btn').forEach((button) => {
      button.addEventListener('click', async (e) => {
        e.preventDefault();
        const id = button.dataset.productId;

        try {
          await fetch(window.Shopify.routes.root + 'cart/add.js', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json', Accept: 'application/json' },
            body: JSON.stringify({ id, quantity: 1 }),
          });
          window.location.href = '/cart';
        } catch (error) {
          console.error('Buy now failed:', error);
        }
      });
    });
  });
</script>

{% schema %}
{
  "name": "Luxury Product Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop the Look"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    }
  ],
  "presets": [
    {
      "name": "Luxury Product Carousel"
    }
  ]
}
{% endschema %}
