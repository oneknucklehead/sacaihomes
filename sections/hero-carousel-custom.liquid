<section class="relative w-full overflow-hidden">
  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide relative">
          <img
            src="{{ block.settings.image | img_url: '2000x' }}"
            alt="{{ block.settings.heading }}"
            class="w-full h-[80vh] object-cover"
          >
          <div class="absolute inset-0 bg-black/40 flex flex-col justify-center items-center text-center text-white px-4">
            <h2 class="text-4xl md:text-6xl font-semibold mb-4">{{ block.settings.heading }}</h2>
            <p class="text-lg md:text-xl mb-6">{{ block.settings.subheading }}</p>
            {% if block.settings.button_label != blank and block.settings.button_link != blank %}
              <a
                href="{{ block.settings.button_link }}"
                class="bg-white text-black px-6 py-3 rounded-full font-semibold hover:bg-gray-200 transition"
              >
                {{ block.settings.button_label }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Navigation Buttons -->
    <div class="swiper-button-next text-white"></div>
    <div class="swiper-button-prev text-white"></div>
    <div class="swiper-pagination"></div>
  </div>
</section>

<!-- Swiper.js CDN -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>

<!-- Init Swiper -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.mySwiper', {
      loop: true,
      autoplay: {
        delay: 4000,
        disableOnInteraction: false,
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      effect: 'fade',
      fadeEffect: { crossFade: true },
      speed: 1000,
    });
  });
</script>

{% schema %}
{
  "name": "Hero Carousel",
  "settings": [
    {
      "type": "paragraph",
      "content": "A customizable full-width image carousel like AddressHome."
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading text",
          "default": "Luxury You Can Feel"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading text",
          "default": "Discover premium home dÃ©cor"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Carousel",
      "category": "Custom"
    }
  ]
}
{% endschema %}
