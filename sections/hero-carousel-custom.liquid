<section class="relative w-full overflow-hidden">
  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide relative">
          <img
            src="{{ block.settings.image | img_url: '2000x' }}"
            alt="{{ block.settings.heading }}"
            class="w-full h-[80vh] object-cover"
          >
          <div class="absolute inset-0 bg-black/40 flex flex-col justify-center items-center text-center text-white px-4">
            <p class="text-4xl md:text-6xl text-white font-semibold mb-12">{{ block.settings.heading }}</p>
            {% comment %} <p class="text-lg md:text-xl mb-6">{{ block.settings.subheading }}</p> {% endcomment %}
            {% if block.settings.button_label != blank and block.settings.button_link != blank %}
              <a
                href="{{ block.settings.button_link }}"
                class="border-white border-[1px] text-white uppercase px-7 py-3 font-semibold transition"
              >
                {{ block.settings.button_label }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Navigation Buttons -->
    {% comment %}
      <div class="swiper-button-next text-white"></div>
      <div class="swiper-button-prev text-white"></div>
    {% endcomment %}
    <div class="swiper-pagination  custom-pagination"></div>
  </div>
</section>

<!-- Swiper.js CDN -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>

<!-- Init Swiper -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.mySwiper', {
      loop: true,
      autoplay: {
        delay: 4000,
        disableOnInteraction: false,
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      {% comment %} navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      }, {% endcomment %}
      effect: 'fade',
      fadeEffect: { crossFade: true },
      speed: 1000,
    });
  });
</script>
<style>
  /* Ensure positioning context */
  .swiper.mySwiper,
  .swiper.mySwiper .swiper-wrapper {
    position: relative !important;
  }

  /* Position pagination bottom-right */
  .swiper-pagination.custom-pagination {
    position: absolute !important;
    right: 5rem !important; /* move horizontally from right edge */
    bottom: 5rem !important; /* adjust vertical position â€” increase to lift higher */
    left: auto !important;
    transform: none !important;
    width: auto !important;
    display: flex;
    gap: 10px;
    justify-content: flex-end;
    z-index: 50;
  }

  /* Pagination bullets style */
  .swiper-pagination-bullet {
    width: 10px;
    height: 10px;
    border: 2px solid white;
    background: transparent;
    opacity: 1;
    transition: all 0.3s ease;
  }

  .swiper-pagination-bullet-active {
    background: white;
    border-color: white;
    transform: scale(1.1);
  }

  /* Responsive tweaks */
  @media (max-width: 768px) {
    .swiper-pagination.custom-pagination {
      right: 1.25rem !important; /* 20px */
      bottom: 3.5rem !important; /* 56px */
    }
  }
</style>
